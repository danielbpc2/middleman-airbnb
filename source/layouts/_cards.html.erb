  <div class="row">
    <% data.cities.each do |city, info| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.9)), url('https://kitt.lewagon.com/placeholder/cities/<%= city.downcase %>');">
          <div class="card-category"><%=info.category%></div>
          <div class="card-description">
            <h2>Le Wagon <%=info.name%></h2>
            <p><%=info.desc%></p>
          </div>
          <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/random">
          <a class="card-link" href="#" ></a>
        </div>
      </div>
    <% end %>
  </div>
